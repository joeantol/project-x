function titleBar
{
   user=`/usr/bin/whoami`
   dirs=`dirs`
   hostname='localhost'
   
   case $TERM in
       iMac*)
           ;;
       xterm*)
           ##echo -ne "\033]0;${user}@${hostname}: ${dirs}\007"
           echo -ne "\033]0;${TITLE}: ${dirs}\007"
           export PS1="iMac > "

	   ;;
       *)
	   TITLEBAR=''
	   ;;
   esac

}

function pp {
   pushd $1
   titleBar
}

function po {
   popd
   titleBar
}

function pd {
   titleBar
   dirs | tr " " "\n" | awk '{print NR-1 "  " $0}'
}

